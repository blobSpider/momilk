<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <stroke
                android:width="3dp"
                android:color="#FFFF00FF" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:top="0dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="3dp"
                android:color="#FFFFFFFF" />

            <solid android:color="#FFFFFFFF" />
        </shape>
    </item>

</layer-list>